---
import AuthLayout from "../layouts/AuthLayout.astro";
---

<AuthLayout>
  <div id="msgBox" class="hidden bg-red-50 text-red-600 text-xs p-3 rounded mb-4 border border-red-200 text-center font-bold"></div>

  <form id="loginForm" class="space-y-4">
    <div>
      <label class="block text-xs font-bold text-slate-700 mb-1">Username</label>
      <input name="username" type="text" class="w-full p-2 border border-slate-300 rounded text-sm focus:ring-2 focus:ring-blue-500 outline-none" required />
    </div>
    
    <div>
      <label class="block text-xs font-bold text-slate-700 mb-1">Password</label>
      <input name="password" type="password" class="w-full p-2 border border-slate-300 rounded text-sm focus:ring-2 focus:ring-blue-500 outline-none" required />
    </div>

    <button type="submit" class="w-full bg-slate-900 text-white font-bold py-2 rounded hover:bg-black transition">Masuk</button>
  </form>

  <p class="text-center text-xs text-slate-400 mt-4">
    Belum punya akun? <a href="/register" class="text-blue-600 hover:underline">Daftar</a>
  </p>

  <script src="../scripts/auth.ts"></script>
</AuthLayout>