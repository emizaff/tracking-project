---
import AuthLayout from "../layouts/AuthLayout.astro";
---

<AuthLayout>
  <h2 class="text-center text-lg font-bold text-slate-700 mb-4">Buat Akun Baru</h2>

  <div id="msgBox" class="hidden bg-red-50 text-red-600 text-xs p-3 rounded mb-4 border border-red-200 text-center font-bold"></div>

  <form id="registerForm" class="space-y-4">
    <div>
      <label class="block text-xs font-bold text-slate-700 mb-1">Username</label>
      <input name="username" type="text" placeholder="Pilih username unik..." class="w-full p-2 border border-slate-300 rounded text-sm focus:ring-2 focus:ring-blue-500 outline-none" required />
    </div>
    
    <div>
      <label class="block text-xs font-bold text-slate-700 mb-1">Password</label>
      <input name="password" type="password" placeholder="Minimal 6 karakter..." class="w-full p-2 border border-slate-300 rounded text-sm focus:ring-2 focus:ring-blue-500 outline-none" required />
    </div>

    <button type="submit" class="w-full bg-blue-600 text-white font-bold py-2 rounded hover:bg-blue-700 transition">Daftar Sekarang</button>
  </form>

  <p class="text-center text-xs text-slate-400 mt-4">
    Sudah punya akun? <a href="/login" class="text-slate-900 font-bold hover:underline">Login disini</a>
  </p>

  <script src="../scripts/register.ts"></script>
</AuthLayout>