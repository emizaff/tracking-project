---
// web-public/src/pages/index.astro
import PublicProjectList from '../components/PublicProjectList';
import PublicGoalList from '../components/PublicGoalList';
import PublicIdeaForm from '../components/PublicIdeaForm';
import TryItYourself from '../components/TryItYourself';
import { Toaster } from 'sonner';
import '../styles/global.css';
---

<html lang="id" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/Logo8.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Tracking Project - 2026 Resolution</title>
  </head>
  
  <body class="bg-[#050505] text-slate-200 antialiased selection:bg-[#f01036]/30 selection:text-white">
    <div class="fixed inset-0 bg-[radial-gradient(circle_at_top,_var(--tw-gradient-stops))] from-[#f01036]/10 via-[#050505] to-[#050505] -z-10"></div>
    
    <Toaster client:load position="top-center" theme="dark" />

    <nav class="sticky top-0 z-50 border-b border-[#222] bg-[#050505]/80 backdrop-blur-md">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-3">
            <a href="/" class="group relative">
               <div class="absolute -inset-2 bg-[#f01036]/20 rounded-full blur-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
               <img 
                src="/Logo8.png" 
                alt="Logo" 
                class="h-8 w-8 relative z-10 transition-all duration-300 group-hover:drop-shadow-[0_0_15px_rgba(240,16,54,0.8)] group-hover:scale-110"
              />
            </a>
            <span class="font-bold text-lg tracking-tight text-slate-100">
              Tracking<span class="text-[#f01036]">Project</span>
            </span>
          </div>
          <div class="flex items-center gap-6">
            <a href="/about" class="text-sm font-medium text-[#666] hover:text-[#f01036] transition-colors">About</a>
            <a href="#projects" class="text-sm font-medium text-[#666] hover:text-[#f01036] transition-colors">Projects</a>
            <a href="#ideas" class="text-sm font-medium text-[#666] hover:text-[#f01036] transition-colors">Idea</a>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 space-y-24">
      
      <section class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start pt-8">
        
        <div class="lg:col-span-2 space-y-8">
            <div class="relative">
                 <div class="absolute -top-10 -left-10 w-40 h-40 bg-[#f01036]/10 blur-[80px] rounded-full pointer-events-none"></div>
                 <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight text-white mb-6 leading-tight">
                  12 Bulan. <br/>
                  <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#f01036] to-orange-600">12 Project.</span>
                </h1>
                <p class="text-lg text-[#888] max-w-xl leading-relaxed">
                  Tahun ini gue menantang diri sendiri buat ship 1 produk setiap bulan. Pantau progressnya di sini, no bullshit.
                </p>
            </div>
            
            <div class="flex flex-wrap gap-4">
                <a href="#projects" class="bg-[#f01036] text-white px-6 py-3 rounded-full font-bold text-sm hover:bg-red-600 transition shadow-[0_0_20px_rgba(240,16,54,0.3)]">
                    Lihat Progress
                </a>
                <a href="#ideas" class="bg-[#1a1a1a] border border-[#333] text-white px-6 py-3 rounded-full font-bold text-sm hover:border-[#f01036] transition">
                    Kirim Tantangan
                </a>
            </div>
        </div>

        <div class="lg:col-span-1 bg-[#0a0a0a] border border-[#222] rounded-2xl p-6 relative overflow-hidden">
            <div class="absolute top-0 right-0 w-32 h-32 bg-[#f01036]/5 blur-[40px] rounded-full"></div>
            <PublicGoalList client:visible />
        </div>

      </section>

      <section id="projects" class="scroll-mt-24">
        <div class="flex items-center justify-between mb-10 border-l-4 border-[#f01036] pl-4">
          <div>
            <h2 class="text-3xl font-bold text-white">Build Log</h2>
            <p class="text-[#666]">Apa yang lagi gue masak.</p>
          </div>
        </div>
        <PublicProjectList client:visible />
      </section>

      <section id="ideas" class="scroll-mt-24 max-w-2xl mx-auto">
        <div class="text-center mb-10">
          <h2 class="text-3xl font-bold text-white mb-3">Kasih Gue Ide</h2>
          <p class="text-[#666]">Buntu nih. Kalau lu punya ide liar, lempar aja ke sini.</p>
        </div>
        <div class="bg-[#0a0a0a] border border-[#222] rounded-2xl p-6 md:p-8 shadow-2xl relative group">
          <div class="absolute -inset-1 bg-gradient-to-r from-[#f01036] to-orange-600 rounded-2xl opacity-20 group-hover:opacity-40 blur transition duration-500"></div>
          <div class="relative">
             <PublicIdeaForm client:visible />
          </div>
        </div>
      </section>

      <section>
        <TryItYourself client:visible />
      </section>

    </main>

    <footer class="border-t border-[#222] bg-[#050505] py-12 mt-12 text-center">
      <p class="text-[#444] text-sm">
        &copy; {new Date().getFullYear()} Tracking Project. Powered by Kopi & Ambisi.
      </p>
    </footer>
  </body>
</html>