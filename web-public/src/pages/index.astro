---
// src/pages/index.astro
import "../styles/global.css";

// Import Komponen React yang baru kita buat
import PublicProjectList from '../components/PublicProjectList';
import PublicGoalList from '../components/PublicGoalList';
import PublicIdeaForm from '../components/PublicIdeaForm';
---

<html lang="id" class="scroll-smooth">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>My Journey ðŸš€ | Focus Tracker Public</title>
    
    <style>
        @keyframes float { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-10px); } }
        .animate-float { animation: float 6s ease-in-out infinite; }
    </style>
</head>
<body class="bg-[#0f172a] text-slate-300 font-sans antialiased selection:bg-indigo-500 selection:text-white">

    {/* HERO SECTION */}
    <section class="relative pt-24 pb-20 overflow-hidden">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-indigo-600/20 rounded-full blur-[120px] pointer-events-none"></div>

        <div class="max-w-4xl mx-auto px-6 relative z-10 text-center">
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-slate-800/50 border border-slate-700/50 backdrop-blur-md text-indigo-400 text-xs font-bold uppercase tracking-wider mb-8 animate-float">
                <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                Building In Public
            </div>
            
            <h1 class="text-5xl md:text-7xl font-black text-white mb-6 leading-tight tracking-tight">
                Mewujudkan <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-purple-500">Mimpi</span> <br class="hidden md:block" />
                Menjadi Nyata.
            </h1>
            
            <p class="text-lg md:text-xl text-slate-400 max-w-2xl mx-auto leading-relaxed mb-10">
                Selamat datang di dashboard publik saya. Di sini kalian bisa memantau project yang sedang saya kerjakan secara real-time.
            </p>

            <div class="flex flex-wrap justify-center gap-4">
                <a href="#projects" class="px-8 py-4 bg-indigo-600 hover:bg-indigo-500 text-white rounded-xl font-bold transition shadow-lg shadow-indigo-500/25">
                    Lihat Project ðŸš€
                </a>
                <a href="#ideas" class="px-8 py-4 bg-slate-800 hover:bg-slate-700 text-white border border-slate-700 rounded-xl font-bold transition">
                    Kirim Ide ðŸ’¡
                </a>
            </div>
        </div>
    </section>

    {/* SECTION 1: PROJECT AKTIF (UTAMA) */}
    <section id="projects" class="py-20 bg-slate-900/30 border-t border-slate-800/50">
        <div class="max-w-6xl mx-auto px-6">
            <div class="flex items-center gap-4 mb-12">
                <div class="h-10 w-1 bg-indigo-500 rounded-full"></div>
                <div>
                    <h2 class="text-3xl font-bold text-white">Active Projects</h2>
                    <p class="text-slate-400 text-sm">Apa yang sedang saya kerjakan saat ini.</p>
                </div>
            </div>
            
            {/* Load Component React dengan client:load agar data diambil di browser */}
            <PublicProjectList client:load />
        </div>
    </section>

    {/* SECTION 2: GOALS / WISHLIST (SEKUNDER) */}
    <section id="goals" class="py-20">
        <div class="max-w-6xl mx-auto px-6">
            <div class="flex items-center gap-4 mb-12">
                <div class="h-10 w-1 bg-amber-500 rounded-full"></div>
                <div>
                    <h2 class="text-3xl font-bold text-white">Goals & Rewards</h2>
                    <p class="text-slate-400 text-sm">Target pribadi dan reward pencapaian.</p>
                </div>
            </div>

            <PublicGoalList client:visible />
        </div>
    </section>

    {/* SECTION 3: IDEA FORM */}
    <section id="ideas" class="py-24 relative border-t border-slate-800/50 bg-slate-900/20">
        <div class="max-w-2xl mx-auto px-6">
            <PublicIdeaForm client:visible />
        </div>
    </section>

    <footer class="py-10 text-center border-t border-slate-800 text-slate-600 text-sm bg-[#0f172a]">
        <p>Built with <span class="text-indigo-500 font-bold">Astro</span> & <span class="text-pink-500 font-bold">Elysia</span>.</p>
        <p class="mt-2">&copy; {new Date().getFullYear()} Focus Tracker.</p>
    </footer>

</body>
</html>